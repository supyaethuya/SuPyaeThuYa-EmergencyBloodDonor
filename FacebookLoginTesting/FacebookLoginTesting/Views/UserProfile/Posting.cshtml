@using Microsoft.AspNet.Identity;
@model IEnumerable<FacebookLoginTesting.Models.Post>

@{
    ViewBag.Title = "Posting";
}

<h2>Emergency Blood Donation Needed Posting</h2><br/><br/><br/>

@if (@Model == null)
{
    <div>No rows match search criteria</div>

}
else
{

    foreach (var item in Model)
    {

        <div class="container" style="background-image:url(../img/PostBg2.jpg); background-position:center; width:600px;">
            <div class="row">
                <div class="col-md-4 text-right"><img src="@item.UserProfile.ImagePath" style=" width:50px; height:50px; border-radius: 25px; margin: 0 auto; overflow: hidden; position: center; top: -100px; margin-bottom: -70px;"></div>
                <div class="col-md-8 text-left">
                    <b style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:16px; color:darkgray;">
                        @Html.DisplayFor(modelItem => item.UserProfile.Name)
                    </b>
                    <b style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:16px; color:darkgray;"> is needing</b>
                </div>
            </div>
            <br /><br />
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-6">
                    <p>
                        <strong style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:16px;">Blood Type: </strong>
                        <b style="font-size:14px;">@Html.DisplayFor(modelItem => item.BloodType)</b>
                    </p>
                    <p>
                        <strong style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:16px;">Age: </strong>
                        <b style="font-size:14px;">@Html.DisplayFor(modelItem => item.Age)</b>
                    </p>
                    <p>
                        <strong style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:16px;">Phone number: </strong>
                        <b style="font-size:14px;">@Html.DisplayFor(modelItem => item.PhoneNumber)</b>
                    </p>
                    <p>
                        <strong style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:16px;">Type of Illness: </strong>
                        <b style="font-size:14px;">@Html.DisplayFor(modelItem => item.Illness)</b>
                    </p>
                    <p>
                        <strong style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:16px;">Location: </strong>
                        <b style="font-size:14px;">@Html.DisplayFor(modelItem => item.Location)</b>
                    </p>


                </div>
                <div class="col-md-2"></div>
            </div>

            @if (@User.Identity.GetUserName() != @item.UserProfile.Email)
            {

            }
            else
            {

                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-2"></div>
                    <div class="col-md-4 text-right">
                        <div>
                            <a href="@Url.Action("EditPosting", "UserProfile", new { @id = @item.PostId })" class="openDialog-Edit"><i class="fas fa-2x fa-edit text-primary mb-3 sr-icon-3" style="cursor: pointer;"></i></a>
                        </div>
                    </div>
                    <div class="col-md-4 text-left">
                        <div>
                            <a href="@Url.Action("DeletePosting", "UserProfile", new { @id = @item.PostId })" class="openDialog-Edit"><i class="fas fa-2x fa-trash text-primary mb-3 sr-icon-3" style="cursor: pointer;"></i></a>
                        </div>
                    </div>

                </div>
            }

        </div>
        <br />
            <hr />
            <br/>
    }
}



<div class="btn btn-light btn-sm">
    @Html.ActionLink("Back To Home", "Index", new { id = "", @class = "btn btn-light js-scroll-trigger" })
</div>
<br/><br/><br/>
